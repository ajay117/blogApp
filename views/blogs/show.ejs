<%- include("../partials/head") %>

<div class="container">
  <h1><%= blog.title %></h1>
  <div class="img-container">
    <img src="<%= blog.image %>" />
  </div>
  <p><%= blog.description %></p>
  <div class="options flex">
    <button><a href="/blogs/<%= blog.id %>/edit">Edit</a></button>
    <form method="POST" action="/blogs/<%= blog.id %>?_method=DELETE">
      <button>Delete</button>
    </form>
  </div>
</div>

<p class="text-center"><a href="/">Go to main page.</a></p>

